---
import '@fontsource-variable/dm-sans';
import Container from '../components/Container.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/png' href='/me.png' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='generator' content={Astro.generator} />
    <title>Piotr Raducha Portfolio</title>
  </head>
  <body class='flex flex-col min-h-screen'>
    <Header />
    <div
      class='divider mx-auto h-fit max-w-3xl w-[95vw] flex flex-nowrap bg-secondary'
    >
    </div>
    <main
      class='mx-auto flex-grow max-h-[90vh] md:max-h-[70vh] max-w-3xl overflow-y-scroll py-2 grid w-[95vw]'
    >
      <div class='container'>
        <Container />
      </div>
    </main>
    <Footer class='flex justify-center items-center py-4' />
  </body>
</html>

<style is:global>
  :root {
    --brutone: #7df9ff;
    --bruttwo: #2fff2f;
    --brutthree: #ff00f5;
    --brutfour: #3300ff;
    --brutfive: #ffff00;
    --brutsix: #ff4911;
  }

  .brutal-shadow {
    -webkit-box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 1);
    -moz-box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 1);
    box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 1);
  }

  .brutal-tag {
    background-color: white !important;
    color: black !important;
    border: 2px solid black;
    cursor: default;
    font-weight: 600;
  }

  .brutal-tag:hover {
    background-color: black !important;
    color: white !important;
    cursor: default;
  }

  body {
    font-family: 'DM Sans Variable', sans-serif;
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @media only screen and (max-width: 480px) {
    * {
      font-size: 12px;
    }
  }

  .overflow-y-scroll::-webkit-scrollbar {
    width: 3px;
  }

  .overflow-y-scroll::-webkit-scrollbar-thumb {
    background-color: oklch(var(--s));
  }

  .overflow-y-scroll {
    scrollbar-width: 1px;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }
</style>
