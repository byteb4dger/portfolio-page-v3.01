---
import { Icon } from 'astro-icon/components';
import * as about from '../pages/about/about.md';
---

<header class='mx-auto pt-6 pb-2 relative'>
  <article
    class='flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl'
  >
    <div class='flex-shrink-0 w-32 md:w-32 rounded-full overflow-hidden avatar'>
      <img
        alt='avatar'
        src='/me.png'
        class='grayscale-[50] hover:grayscale-0'
      />
    </div>

    <div class='text-center'>
      <div
        class='flex justify-center md:justify-between items-center mb-2 relative'
      >
        <h1 class='text-3xl font-extrabold tracking-tight md:text-3xl relative'>
          {about.frontmatter.name}
          <div class='absolute top-0 left-full ml-2 -mt-4'>
            <div
              class='brutal-shadow badge-pron badge w-max text-sm font-light badge-outline'
            >
              {about.frontmatter.pronouns}
            </div>
          </div>
        </h1>
      </div>
      <h2
        class='text-lg mb-2 text-secondary brutal-shadow badge badge-outline p-4 badge-des'
      >
        {about.frontmatter.designation}
      </h2>
      <div class='flex items-center justify-center mt-1 local'>
        <Icon name='carbon:location' class='w-4 h-4 mr-1' />
        <p class='text-sm text-secondary'>{about.frontmatter.location}</p>
      </div>
    </div>
  </article>
</header>

<style>
  .avatar {
    border: 4px dashed var(--brutsix);
  }

  .badge-pron {
    background-color: var(--brutone);
  }

  .badge-des {
    background-color: var(--brutsix);
  }

  .local {
    background-color: var(--brutfive);
    border: 1px solid black;
    border-radius: 10px;
  }

  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
